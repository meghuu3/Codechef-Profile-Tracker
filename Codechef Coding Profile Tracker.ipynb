    "import requests\n",
    "from bs4 import BeautifulSoup,NavigableString,Tag\n",
    "\n",
    "\n",
    "class Codechef:\n",
    "    \"\"\"This is a class where on entering the username gives out the rating  rating and problems \n",
    "    solved in Codechef Platform\"\"\"\n",
    "    \n",
    "    def __init__(self,username):\n",
    "        self.username = username\n",
    "    \n",
    "    def url(self):\n",
    "        website = \"https://www.codechef.com/users/{}\".format(self.username)\n",
    "        return website\n",
    "    \n",
    "    def getData(self):\n",
    "        web = self.url()\n",
    "        page = requests.get(web)\n",
    "        return page\n",
    "    \n",
    "    def parseData(self):\n",
    "        htmlPage = self.getData()\n",
    "        soup = BeautifulSoup(htmlPage.text,'html.parser')\n",
    "        return soup\n",
    "    \n",
    "    def getRating(self):\n",
    "        try:\n",
    "            htmlParse = self.parseData()\n",
    "            rating = htmlParse.find('div',class_ = \"rating-number\").text\n",
    "            return int(rating)\n",
    "        except AttributeError:\n",
    "            return -999999\n",
    "    \n",
    "    def getMaxRating(self):\n",
    "        htmlParse = self.parseData()\n",
    "        maxRatingBox = htmlParse.find('div',class_ = \"rating-header text-center\")\n",
    "        maxRating = 0 \n",
    "        for tag in maxRatingBox.find('small'):\n",
    "            #(Highest Rating 1638)\n",
    "            val = tag.text\n",
    "            n = len(val)\n",
    "            #idx = tag.text.find('g')\n", #causing an error
    "            maxRating = val[n-5: n-1]\n",
    "        return maxRating\n",
    "    \n",
    "    def getRanking(self):\n",
    "        htmlParse = self.parseData()\n",
    "        rankingClass = htmlParse.find('div',class_ = 'rating-ranks').find_all('strong')\n",
    "        rankings = []\n",
    "        for elements in rankingClass:\n",
    "            rankings.append(int(elements.text))\n",
    "        return rankings\n",
    "    \n",
    "    def getStarRating(self):\n",
    "        htmlParse = self.parseData()\n",
    "        star = htmlParse.find('div',class_ = \"rating-star\").text\n",
    "        return star\n",
    "    \n",
    "    def problemsSolved(self):\n",
    "        htmlParse = self.parseData()\n",
    "        solved = htmlParse.find('section',class_ = \"rating-data-section problems-solved\")\n",
    "        solvedData = solved.find_all('h5')\n",
    "        data = []\n",
    "        \n",
    "        for i in solvedData:\n",
    "            idx = i.text.find('(')\n",
    "            idx2 = i.text.find(')')\n",
    "            text = i.text\n",
    "            data.append(int(text[idx+1:idx2]))\n",
    "        return data \n",
    "    \n",
    "    def totalInfo(self):\n",
    "        if self.getRating() == -999999:\n",
    "            return \"No User Found\"\n",
    "        else:\n",
    "            \"\"\" Getting Data From All The Defined Methods \"\"\"\n",
    "            userName = self.username\n",
    "            presentRating = self.getRating()\n",
    "            maxRatingUser = self.getMaxRating()\n",
    "            rankingOfUser = self.getRanking()\n",
    "            globalRank = rankingOfUser[0]\n",
    "            countryRank = rankingOfUser[1]\n",
    "            solvedProblems = self.problemsSolved()\n",
    "            fullySolved = solvedProblems[0]\n",
    "            partiallySolved = solvedProblems[1]\n",
    "            presentStar = self.getStarRating()\n",
    "            \n",
    "            \"\"\" Printing All The Data About The User \"\"\"\n",
    "            print(\"Username : {}\".format(userName))\n",
    "            print(\"Present Rating : {}\".format(presentRating))\n",
    "            print(\"Max Rating : {}\".format(maxRatingUser))\n",
    "            print(\"Full Solved Problems : {}\".format(fullySolved))\n",
    "            print(\"Partially Solved Problems : {}\".format(partiallySolved))\n",
    "            print(\"Country Rank : {}\".format(countryRank))\n",
    "            print(\"Global Rank : {}\".format(globalRank))\n",
    "            print(\"{} Star : {}\".format(len(presentStar),presentStar))\n",
    "\n",
    "            \n",
    "userName = input().strip()\n",
    "user = Codechef(userName)\n",
    "user.totalInfo()"
   ]
